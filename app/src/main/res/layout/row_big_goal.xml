<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/row_big_goal_iv"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/empty_goal"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/row_big_goal_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/row_big_goal_iv"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:text="Title"/>

    <TextView
        android:id="@+id/row_big_goal_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/row_big_goal_iv"
        android:layout_below="@+id/row_big_goal_tv_title"
        android:layout_marginStart="10dp"
        android:text="description"/>

</RelativeLayout>