<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </androidx.recyclerview.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/group_empty_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rvTasks">

            <EditText
                android:id="@+id/etTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="none"
                android:fontFamily="@font/roboto"
                android:gravity="start"
                android:layout_toStartOf="@id/etPoint"
                android:paddingStart="10dp"
                android:paddingEnd="30dp"
                android:text=""
                android:hint="@string/hint_new_task"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fadingEdge="none"
                android:fontFamily="@font/roboto"
                android:layout_toStartOf="@id/btAddTask"
                android:paddingStart="10dp"
                android:paddingEnd="30dp"
                android:text=""
                android:hint="@string/hint_point"
                android:inputType="number"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btAddTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:background="#00FFFFFF"
                android:src="@drawable/baseline_add_box_black_24" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>