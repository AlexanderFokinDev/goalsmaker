<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/goal_indicators_tv_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:fontFamily="@font/roboto"
        android:gravity="start"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_toLeftOf="@id/goal_indicators_check"
        android:text=""
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/goal_indicators_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:background="#00FFFFFF"
        android:src="@drawable/baseline_delete_black_24" />

    <CheckBox
        android:id="@+id/goal_indicators_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@id/goal_indicators_delete" />



</RelativeLayout>